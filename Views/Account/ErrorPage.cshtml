@{
    ViewBag.Title = "Error";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger mt-5 p-5" role="alert">
                <h4 class="alert-heading">¡Ups! Algo no ha salido bien.</h4>
                <p>@ViewBag.ErrorMessage</p>
                <hr>
                <p class="mb-0">Por favor, inténtelo de nuevo o póngase en contacto con el soporte si el problema persiste.</p>
            </div>
        </div>
    </div>
</div>
